(defwidget top []
  (box
    :class "top"
    :halign "center"
    :valign "start"
    (launcher)
  )
)

(defwidget center [screen]
  (box
    :class "center"
    :halign "center"
    :valign "center"
    (launcher)
  )
)


(defwidget end []
  (box
    :class "end"
    :halign "center"
    :valign "end"
    (time)
  )
)

(defwidget bar [screen]
  (box
    :orientation "v"
    :space-evenly true
    :class "bar"
    (top)
    (center :screen screen)
    (end)
  )
)


